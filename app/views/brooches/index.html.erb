<h1 class="jewellery-item-heading">Brooches</h1>
<div class="card-container">
  <% @brooches.each do |brooch| %>
      <div class="jewellery-card">
        <%= image_tag brooch.image if brooch.image.attached? %>
        <div class="jewellery-card-content">
          <%= link_to brooch_path(brooch) do %>
            <h3><%= brooch.name %></h3>
          <% end %>
          <p><%= number_to_currency(brooch.price) %></p>
        </div>
      </div>
  <% end %>
</div>
